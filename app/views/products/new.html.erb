<h1>Add a New Product!</h1>

<% if @product && @product.errors.any? %>
  <ul>
    <% @product.errors.full_messages.each do |message| %>
      <li ><%= message %></li>
    <% end %>
  </ul>

<% end %>

<%= form_tag '/products', method: :post do %>

  <div>
    <%= label_tag :name %>
    <%= text_field_tag :name, @product.name %>
  </div>

  <div>
    <%= label_tag :price %>
    <%= text_field_tag :price, @product.price %>
  </div>

  <div>
    <%= label_tag :stock %>
    <%= text_field_tag :stock, @product.stock %>
  </div>

  <div>
    <%= label_tag :description %>
    <%= text_field_tag :description, @product.description %>
  </div>

  <div>
    <%= collection_select :supplier, :supplier_id, Supplier.all, :id, :name %>
  </div>

  <%= submit_tag 'Add Product' %>

<% end %>
