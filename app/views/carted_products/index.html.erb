<h1>Check Out</h1>

<table class="table">
  <tr>
    <th> Product Name </th>
    <th> Price </th>
    <th> Quantity </th>
  </tr>
  <% @carted_products.each do |carted_product| %>
    <tr>
      <td> <%= carted_product.product.name %> </td>
      <td> <%= carted_product.product.price %> </td>
      <td> <%= carted_product.quantity %> </td>
    </tr>
  <% end %>
</table>

<%= link_to 'Confirm and Buy', '/orders/#{@order.id}', method: :patch %>